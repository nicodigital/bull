---
// export const prerender = false;
import { Picture } from "astro:assets";
import { Icon } from "astro-icon/components";
import Layout from "@/layout/Layout.astro";


import HeroAnim from "@/components/HeroAnim.astro";
import Slider from "../components/Slider.astro";
import CardsClient from "../components/CardsClient.astro";
import CONTACT from '../data/contact.json';
import Form from "@/components/Form.astro";

import teamIMG from "../assets/team.jpg";
import Team from "@/components/Team.astro";
---

<Layout
  title="Bull"
  claim="El nuevo framework de maquetación de sitios de I+D"
  description="El nuevo framework de maquetación de sitios de I+D"
>
  <!-- Hero -->
  <section
    id="hero"
    class="h-screen relative w-full flex items-center justify-center bg-deep-blue overflow-hidden"
  >
    <HeroAnim />

    <h1 class="relative text-h3 xg:text-h2 z-10 text-white text-center">
      Tu socio en finanzas corporativas <br class="hidden xg:block" />
      y estrategia empresarial
    </h1>

    <a href="#experiencia" class="xg:hidden absolute left-[50%] bottom-4 translate-x-[-50%] z-50 text-white"> Scroll para continuar </a>

  </section>

  <!-- Experiencia -->
  <section id="experiencia" class="container row section xg:text-center">
    <div class="col-1-13 xg:col-3-11">
      <h2 class="mini-title">Experiencia</h2>
      <p class="text-h3 text-deep-blue">
        Ofrecemos soluciones innovadoras y estratégicas para impulsar el
        crecimiento, la rentabilidad y la eficiencia de tu empresa.
      </p>
    </div>
  </section>

  <!-- Team Image -->
  <section id="team" class="container row">
    <div class="col-1-13">
      <Picture
        class="w-full object-cover max-w-[initial] rounded-3xl widescreen"
        src={teamIMG}
        formats={["webp"]}
        alt="Bull Team"
      />
    </div>
  </section>

  <!-- Partners -->
  <section class="container row section-top">
    <div class="xg:col-1-10">
      <h2 class="text-h3">
        <span class="text-deep-blue">
          Más de 15 años de experiencia en dirección <br class="hidden xg:block" />
          financiera en diversas industrias y geografías.</span>
        <br />
        <span class="text-e-blue">Generamos mejoras inmediatas con un <br class="hidden xg:block" /> enfoque proactivo y dinámico.</span>
      </h2>
    </div>

    <div class="xg:col-1-13 pt-10 xg:pt-15 pb-3 overflow-x-auto">
      <div class="partners">
        <Icon name="santander" class="w-[19rem] h-auto" />
        <Icon name="bbva" class="w-[12rem] h-auto" />
        <Icon name="santander" class="w-[19rem] h-auto" />
        <Icon name="bbva" class="w-[12rem] h-auto" />
        <Icon name="santander" class="w-[19rem] h-auto" />
        <Icon name="bbva" class="w-[12rem] h-auto" />
    </div>
    </div>

  </section>

  <!-- Servicios -->
  <section class="section relative xg:h-[270vh]">
    
      <div class="container row mb-10">
        <div class="col-1-13">
          <hr class="h-[2px] bg-deep-blue-300 mb-[2.5rem]" />
          <h2 class="mini-title">Servicios</h2>
        </div>

        <div class="xg:col-1-7">
          <p class="text-h4 text-deep-blue">
            Proporcionamos una amplia gama de servicios financieros y
            estratégicos para impulsar el crecimiento y la eficiencia de tu
            empresa.
          </p>
        </div>
      </div>
      <div class="sticky top-[15vh]">
        <Slider />
      </div>
  </section>

  <!-- Historias de éxito -->
  <section class="container row section-top xg:pb-5 text-center xg:mt-[-10vh]">
    <div class="xg:col-3-11 mb-10 xg:mb-12">
      <h2 class="mini-title">Historias de Éxito</h2>
      <p class="text-h3 text-deep-blue">
        Nuestros clientes comparten su visión y ambición de generar un cambio
        positivo
      </p>
    </div>
    <div class="col-1-13 grid md:grid-cols-3 gap-4 xg:gap-8">
      <CardsClient />
    </div>
  </section>

  <!-- Nosotros -->
  <section id="nosotros" class="section-top">
    <div class="container row mb-10 xg:mb-15">
      <div class="col-1-13 mb-4">
        <hr class="h-[2px] bg-deep-blue-300 mb-[2.5rem]" />
        <h2 class="mini-title">Nosotros</h2>
      </div>
      <div class="col-1-13">
        <p class="text-h4 text-deep-blue mb-10">
          Nuestro equipo, tu socio en el éxito
        </p>
        <Team />
      </div>
    </div>
  </section>

  <!-- Contacto -->
  <section id="contacto" class="container row section xg:mb-12">
    <div class="xg:col-1-4">
      <h2 class="mini-title mb-10">Contáctanos</h2>

      <div class="mt-10 xg:mt-20">
        <p>
          Contáctanos para obtener más información sobre nuestros servicios de
          consultoría o para hablar sobre tu proyecto.
        </p>

        <p class="text-e-blue font-medium mt-2">
          <span class="block mb-2">Estamos aquí para ayudarte. </span>
          <a href="mailto:info@bulladvisors.com.uy">info@bulladvisors.com.uy</a>

          <div class="flex gap-1 mt-2">
            <a href={CONTACT[0].whatsapp} target="_blank" rel="noreferrer noopener">
                <Icon class="text-e-blue text-[2.5rem]" name="mdi:linkedin" />
            </a>
            <a href={CONTACT[0].linkedin} target="_blank" rel="noreferrer noopener">
                <Icon class="text-e-blue text-[2.5rem]" name="mdi:whatsapp" />
            </a>
        </div>
          
        </p>

      </div>
    </div>
    <div class="xg:col-7-12">
      <h3 class="text-h4 text-deep-blue mb-10">
        ¿Listo para desbloquear el <br />
        potencial de tu negocio?
      </h3>
      <Form />
    </div>
  </section>

</Layout>
