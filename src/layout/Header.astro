---
import { Icon } from 'astro-icon/components'
import "../css/layout/header.css";
import LangSwitcher from "../components/LangSwitcher.astro";
import Burger from "../components/Burger.astro";
import Menu from "../components/Menu.astro";
const { width } = Astro.props;

const homeUrl = import.meta.env.HOME_URL ?? '/';
---
<header class="container row py-3 mb-4 items-center" >
    
    <div class="md:col-1-4">
        <a class="relative block z-[9999] reload" href=""  >
            <Icon name="logo" class="w-[9.5rem] h-auto" />
        </a>
    </div>
    <div class="md:col-4-10 flex justify-center">

        <Menu items={
            [
                ['Experiencia', `#experiencia`],
                ['Servicios', '#servicios'],
                ['Nosotros', '#nosotros']
            ]
        } />

        <Burger/>
        
    </div>

    <div class="md:col-10-13 hidden xg:flex justify-end">
        <div class="flex text-white items-center gap-3">
            <LangSwitcher />
            <a href="#contacto" class="btn btn-e-blue smooth-link" >Cont√°ctanos</a>
        </div>
    </div>
    
</header>
