---
// export const prerender = false;
import { Picture } from "astro:assets";
import Layout from "../../layout/Layout.astro";

/* GET LANG */
import { getI18N } from "../../i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

import CardsServicios from "@/components/CardsServicios.astro";
import CardsClientes from "@/components/CardsClientes.astro";
import ContactText from "@/components/ContactText.astro";
import Form from "@/components/Form.astro";

import TeamDesktop from "@/components/TeamDesktop.astro";
import TeamMobile from "@/components/TeamMobile.astro";
import PartnersDesktop from "@/components/PartnersDesktop.astro";
import PartnersMobile from "@/components/PartnersMobile.astro";

import teamIMG from "@/assets/team.jpg";
---

<Layout
  title="Bull"
  claim={ i18n.METATITLE }
  description={ i18n.METADESC }
  image = 'img/Bull-Advisors-Social.jpg'
>
  <!-- Hero -->
  <section
    id="hero"
    class="h-[100svh] relative w-full flex items-center justify-center overflow-hidden"
  >
    <video
      class="absolute top-0 left-0 w-full h-full pointer-events-none hidden xg:block object-cover"
      src="/Bull-Back.mp4"
      poster="/img/poster.jpeg"
      loop
      autoplay
      muted
      playsinline></video>

    <h1 class="relative text-h3 xg:text-h2 z-10 text-white text-center">
      <Fragment set:html={i18n.HEROTITLE} />
    </h1>

    <a
      href="#experiencia"
      class="xg:hidden absolute left-[50%] bottom-3 translate-x-[-50%] z-10 text-white"
    >
      { i18n.WORDS.SCROLL_CONTINUE }
    </a>
  </section>

  <!-- Experiencia -->
  <section id="experiencia" class="container row section xg:text-center">
    <div class="col-1-13 xg:col-3-11">
      <h2 class="mini-title">
        {i18n.WORDS.EXPERIENCIA}
      </h2>
      <p class="text-h5 xg:text-h3 text-deep-blue">
        {i18n.EXPERIENCIA.T1}
      </p>
    </div>
  </section>

  <!-- Team Image -->
  <section id="team" class="overflow-hidden">
    <Picture
      class="w-full object-cover max-w-[initial] rounded-3xl team-to-wide"
      src={teamIMG}
      formats={["webp"]}
      alt="Bull Team"
    />
  </section>

  <!-- Partners -->
  <section class="section-top">
    <div class="container row">
      <div class="xg:col-1-10">
        <h2 class="text-h5 xg:text-h3">
          <span class="text-deep-blue">
            {i18n.EXPERIENCIA.T2}
            <br class="hidden xg:block" />
            {i18n.EXPERIENCIA.T3}
          </span>
          <br />
          <span class="text-e-blue">
            {i18n.EXPERIENCIA.T4}
            <br class="hidden xg:block" />
            {i18n.EXPERIENCIA.T5}
          </span>
        </h2>
      </div>
      <div>
        <h3 class="mini-title pt-10 xg:py-10">
          {i18n.PARTNERS}
        </h3>
      </div>
      <div class="xg:col-1-13 hidden xg:block">
        <div class="partners">
          <PartnersDesktop class="partners" />
        </div>
      </div>
    </div>

    <div class="xg:hidden mt-7">
      <PartnersMobile class="partners" />
    </div>
  </section>

  <!-- Servicios -->
  <section id="servicios" class="section-bottom pt-4 sm:pt-6 xg:pt-8 3xl:pt-10">
    <div class="container row mb-10">
      <div class="col-1-13">
        <hr class="h-[2px] bg-deep-blue-300 mb-[2.5rem]" />
        <h2 class="mini-title">
          {i18n.WORDS.SERVICIOS}
        </h2>
      </div>
      <div class="xg:col-1-7">
        <p class="text-h5 xg:text-h4 text-deep-blue">
          {i18n.SERV_TXT}
        </p>
      </div>
    </div>
    <CardsServicios />
  </section>

  <!-- Clientes -->
  <section
    class="container row section-top xg:pb-5 text-center xg:mt-[-10vh] overflow-hidden"
  >
    <div class="xg:col-3-11 mb-10 xg:mb-12">
      <h2 class="mini-title">
        {i18n.CLIENTS.TITLE}
      </h2>
      <p class="text-h5 xg:text-h3 text-deep-blue">
        {i18n.CLIENTS.T1}
      </p>
    </div>

    <div class="col-1-13">
      <div class="testimonios">
        <CardsClientes />
      </div>
    </div>
  </section>

  <!-- Nosotros -->
  <section id="nosotros" class="section-top">
    <div class="container row xg:mb-15">
      <div class="col-1-13">
        <hr class="h-[2px] bg-deep-blue-300 mb-[2.5rem]" />
        <h2 class="mini-title">
          <Fragment set:html={ i18n.NOSOTROS.TITLE } />
        </h2>
      </div>
      <div class="col-1-13 hidden xg:block">
        <TeamDesktop />
      </div>
    </div>

    <div class="xg:hidden">
      <TeamMobile />
    </div>
  </section>

  <!-- Contacto -->
  <section id="contacto" class="container row section xg:mb-12">
    <div class="xg:col-1-4">
      <h2 class="mini-title mb-[2.4rem] xg:mb-10">
        { i18n.FOOTER.TITLE }
      </h2>
      <div class="hidden xg:block">
        <ContactText />
      </div>
    </div>

    <div class="xg:col-7-13">
      <h3 class="text-h5 xg:text-h4 text-deep-blue mb-6 xg:mb-10">
        <Fragment set:html={i18n.FOOTER.T1} />
      </h3>

      <!-- Form -->
      <Form />

    </div>

    <div class="xg:hidden">
      <ContactText />
    </div>
  </section>
</Layout>
