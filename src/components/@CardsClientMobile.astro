---
import SliderCSS from "./SliderCSS.astro";
import CLIENTS from "../data/clientes.json";
---
<SliderCSS paddBottom="5" >
{CLIENTS.map((client) => (
    <div class="card-client slide">
      <h3> 
        <span class="text-e-blue" > <Fragment set:html={client.name} /> </span> - 
        <Fragment set:html={client.title} />
      </h3>
      <div>
        
        <div class="talk">
          <p>{client.intro}</p>
          <p class="author">{client.author}</p>
        </div>

        <div class="ctas">
          <div> Investor Relations </div>
          <div> Automovil </div>
        </div>
      </div>
    </div>
  ))}
</SliderCSS>